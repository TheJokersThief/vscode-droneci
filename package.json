{
    "name": "droneci",
    "displayName": "DroneCI",
	"description": "see build status",
	"publisher": "supakornwarodom",
	"repository": "https://github.com/jigkoxsee/vscode-droneci",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:droneBuildFeed"
    ],
    "main": "./out/extension.js",
    "icon": "images/logo.png",
    "contributes": {
        "commands": [
            {
                "command": "droneBuildFeed.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "droneBuildFeed.refreshEntry",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "droneci-explorer",
                    "title": "DroneCI",
                    "icon": "media/droneci.svg"
                }
            ]
        },
        "views": {
            "droneci-explorer": [
                {
                    "id": "droneBuildFeed",
                    "name": "Build Feeds"
                }
            ]
		},
		"configuration": {
            "type": "object",
            "title": "DroneCI",
            "properties": {
                "droneci.server": {
                    "type": "string",
                    "default": null,
                    "description": "Drone's server url"
				},
                "droneci.token": {
                    "type": "string",
                    "default": null,
                    "description": "Drone's access token"
				}
			}
		}
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/node-emoji": "^1.8.1",
        "@types/vscode": "^1.40.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "node-emoji": "^1.10.0",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.19.2"
    }
}