{
    "name": "droneci",
    "displayName": "DroneCI",
    "description": "View drone build feed",
    "publisher": "supakornwarodom",
    "repository": "https://github.com/jigkoxsee/vscode-droneci",
    "version": "0.0.9",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:droneBuildFeed",
        "onCommand:droneBuildFeed.refreshEntry",
        "onCommand:droneBuildFeed.viewBuild",
        "onCommand:droneBuildFeed.viewCommit",
        "onCommand:droneBuildFeed.viewLog",
        "onCommand:droneBuildFeed.openLog"
    ],
    "main": "./out/extension.js",
    "icon": "images/logo.png",
    "contributes": {
        "commands": [
            {
                "command": "droneBuildFeed.refreshEntry",
                "category": "DroneCI",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "droneBuildFeed.viewCommit",
                "category": "DroneCI",
                "title": "View Commit",
                "icon": "$(git-commit)"
            },
            {
                "command": "droneBuildFeed.viewBuild",
                "category": "DroneCI",
                "title": "View Build on web",
                "icon": "$(link-external)"
            },
            {
                "command": "droneBuildFeed.openLog",
                "category": "DroneCI",
                "title": "Open Log on web",
                "icon": "$(link-external)"
            },
            {
                "command": "droneBuildFeed.viewLog",
                "category": "DroneCI",
                "title": "View Log",
                "icon": "$(file)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "droneBuildFeed.refreshEntry",
                    "when": "view == droneBuildFeed",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "droneBuildFeed.viewBuild",
                    "when": "viewItem == feed",
                    "group": "inline@99"
                },
                {
                    "command": "droneBuildFeed.viewCommit",
                    "when": "viewItem == feed",
                    "group": "inline@1"
                },
                {
                    "command": "droneBuildFeed.openLog",
                    "when": "viewItem == step",
                    "group": "inline@99"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "droneci-explorer",
                    "title": "DroneCI",
                    "icon": "media/droneci.svg"
                }
            ]
        },
        "views": {
            "droneci-explorer": [
                {
                    "id": "droneBuildFeed",
                    "name": "Build Feeds"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "DroneCI",
            "properties": {
                "droneci.server": {
                    "type": "string",
                    "default": null,
                    "description": "Drone's server url"
                },
                "droneci.token": {
                    "type": "string",
                    "default": null,
                    "description": "Drone's access token"
                },
                "droneci.refresh_interval": {
                    "type": "number",
                    "default": 5,
                    "description": "Build feed refresh interval in minutes"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/node-emoji": "^1.8.1",
        "@types/vscode": "^1.40.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "node-emoji": "^1.10.0"
    }
}
